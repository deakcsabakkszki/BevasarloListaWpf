<Window x:Class="BevasarloListaWpf.Hozzaadas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BevasarloListaWpf"
        mc:Ignorable="d"
        Title="Új termék" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Termék:" Margin="20,0,0,0"/>
        <TextBox Grid.Row="0" Width="150" Height="20" HorizontalAlignment="Right" Margin="0,0,20,0"/>
        <Label Grid.Row="1" Content="Mennyiség:" Margin="20,0,0,0"/>
        <TextBox Grid.Row="1" Width="150"   Height="20" HorizontalAlignment="Right" Margin="0,0,20,0"/>
        <Label Grid.Row="2" Content="Ár:" Margin="20,0,0,0"/>
        <TextBox Grid.Row="2" Width="150"  Height="20" HorizontalAlignment="Right" Margin="0,0,20,0"/>
        <Label Grid.Row="3" Content="Kategória:" Margin="20,0,0,0"/>
        <ComboBox Grid.Row="3" Width="150"  Height="20" HorizontalAlignment="Right" Margin="0,0,20,0">
            <ComboBoxItem Content="A"/>
            <ComboBoxItem Content="B"/>
            <ComboBoxItem Content="C"/>
            <ComboBoxItem Content="D"/>
        </ComboBox>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
            <Button Content="Ok" Width="60" Height="25" Margin="10"/>
            <Button Content="Mégse" Width="60" Height="25" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
